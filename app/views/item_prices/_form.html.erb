<%= simple_form_for @item_price, remote: true, html: { class: 'form-horizontal', multipart: true } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Price</legend>

    <%= f.input :item_id, collection: Item.active.to_a, include_blank: true, input_html: {class: "avg"} %>
    <%= f.input :price, label: 'New Price', input_html: {class: "avg"} %>


    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', items_path(@item_price.id), :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>