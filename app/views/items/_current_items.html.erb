<% unless items.nil? || items.empty? %>
  <h5><b><%= item_type.capitalize %></b></h5>
  <table class="table table-striped">
    <thead>
      <tr>
        <th width="300">Name</th>
        <th width="100">Price</th>
        <th width="100">Inventory</th>
        <% if logged_in? && current_user.role == "customer"%>
          <th width="120">Cart</th>
        <%end%>
      </tr>
    </thead>
    <tbody>
      <% items.each do |item| %>
        <tr>
          <td><%= link_to item.name, item_path(item) %></td>
          <td><%= number_to_currency item.current_price %></td>
          <td><%= item.inventory_level %></td>
          <% if logged_in? && current_user.role == "customer"%>
            <td><%= link_to 'Add to Cart', addtocart_path(item), :class => 'button radius' %></td>
          <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>

 
<% end %>