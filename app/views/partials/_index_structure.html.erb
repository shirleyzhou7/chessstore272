<div class="row">
  <div class="small-8 columns">
    <!-- primary partial gets displayed here in main div -->
    <%= render partial: "#{primary}" %>
    <!-- sometimes we want another partial below -->
    <% unless secondary.nil? %>
      <p>&nbsp;</p>
      <%= render partial: "#{secondary}" %>
    <% end %>
    
  </div>
  <div class="small-4 columns">
    <!-- render the sidebar, if it exists -->
    <%if logged_in? && (current_user.role == "admin" || current_user.role == "manager")%>
      <%= render partial: "#{sidebar}" unless sidebar.blank? %>
    <%end%>
  </div>
  <br/>
    <% if logged_in? && (current_user.role =="manager"|| current_user.role =="admin") && model_name == "purchase"%>
      <!-- Add a button for new instances of object -->
      <%= link_to(eval("new_#{model_name}_path"), class: "button radius") do %>
        <!-- <i class="fa fa-plus"></i> -->
        &nbsp;Add a New <%= model_name.capitalize %>
      <% end %>   
    <%end%>
</div>
