<table class="table table-striped">
<!-- this is a partial of a list of users for the user index page -->
  <thead>
    <tr>
      <th>Name</th>
      <th>Street 1</th>
      <th>City</th>
      <th>State</th>
      <% if logged_in? && (current_user.role!= 'customer') %>
        <th>Edit</th>
      <%end%>
    </tr>
  </thead>
  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= link_to school.name, school_path(school) %></td>
        <td><%= link_to school.street_1, school_path(school) %></td>
        <td><%= link_to school.city, school_path(school) %></td>
        <td><%= link_to school.state, school_path(school) %></td>
        <% if logged_in? && (current_user.role!= 'customer') %>
          <td>
            <%= link_to(edit_school_path(school), class: 'button tiny radius') do %>
              <i class="fa fa-pencil"></i>
              &nbsp;Edit
            <% end %>
          </td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @schools, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
<br />