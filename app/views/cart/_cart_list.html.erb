<table class="table table-striped">
<!-- this is a partial of a list of users for the user index page -->
  <thead>
    <tr>
      <th>Item Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Remove Item</th>
    </tr>
  </thead>
  <tbody>
    <% @items_in_cart.each do |oi| %>
      <tr>
        <td><%= link_to oi.item.name, home_path %></td>
        <td><%= oi.quantity %></td>
        <td><%= number_to_currency(oi.item.current_price * oi.quantity) %></td>
        <td> <%= link_to 'Remove Item', removefromcart_path(oi.item_id), :class => 'button radius' %></td>
      </tr>
    <% end %>
  </tbody>

</table>
<br />